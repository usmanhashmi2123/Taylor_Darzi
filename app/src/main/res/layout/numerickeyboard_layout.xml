<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_162sdp"
    android:orientation="vertical"
    android:background="@drawable/keyboard_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:textColor="@android:color/black"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_1"
            android:layout_width="0dp"
            android:textSize="@dimen/_16ssp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:background="@drawable/btn_background_ripple"
            android:layout_weight="1"
            android:text="1"/>

        <Button
            android:id="@+id/button_2"
            android:layout_width="0dp"
            android:textSize="@dimen/_16ssp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:background="@drawable/btn_background_ripple"
            android:layout_weight="1"
            android:text="2"/>

        <Button
            android:id="@+id/button_3"
            android:layout_width="0dp"
            android:textSize="@dimen/_16ssp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:background="@drawable/btn_background_ripple"
            android:layout_weight="1"
            android:text="3"/>

        <ImageView
            android:id="@+id/button_delete"
            android:layout_width="0dp"
            android:textSize="@dimen/_16ssp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_gravity="center"
            android:background="@drawable/btn2_background_ripple"
            android:src="@drawable/delete_keyboard_svg"
            android:layout_weight="1"
            android:tag="delete" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:textColor="@android:color/black"
        android:orientation="horizontal">
        <Button
            android:id="@+id/button_4"
            android:layout_width="0dp"
            android:textSize="@dimen/_16ssp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:background="@drawable/btn_background_ripple"
            android:layout_weight="1"
            android:text="4"/>
        <Button
            android:id="@+id/button_5"
            android:layout_width="0dp"
            android:textSize="@dimen/_16ssp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:background="@drawable/btn_background_ripple"
            android:layout_weight="1"
            android:text="5"/>
        <Button
            android:id="@+id/button_6"
            android:layout_width="0dp"
            android:textSize="@dimen/_16ssp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:background="@drawable/btn_background_ripple"
            android:layout_weight="1"
            android:text="6"/>

        <Button
            android:id="@+id/button_done"
            android:layout_width="0dp"
            android:textSize="@dimen/_16ssp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:background="@drawable/btn_background_ripple"
            android:layout_weight="1"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:textAllCaps="false"
            android:text="@string/done"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:textColor="@android:color/black"
        android:orientation="horizontal">
        <Button
            android:id="@+id/button_7"
            android:layout_width="0dp"
            android:textSize="@dimen/_16ssp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:background="@drawable/btn_background_ripple"
            android:layout_weight="1"
            android:text="7"/>
        <Button
            android:id="@+id/button_8"
            android:layout_width="0dp"
            android:textSize="@dimen/_16ssp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:background="@drawable/btn_background_ripple"
            android:layout_weight="1"
            android:text="8"/>
        <Button
            android:id="@+id/button_9"
            android:layout_width="0dp"
            android:textSize="@dimen/_16ssp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:background="@drawable/btn_background_ripple"
            android:layout_weight="1"
            android:text="9"/>

        <Button
            android:id="@+id/button_decimal"
            android:layout_width="0dp"
            android:textSize="@dimen/_16ssp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:background="@drawable/btn_background_ripple"
            android:layout_weight="1"
            android:text="."/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:textColor="@android:color/black"
        android:orientation="horizontal">
        <Button
            android:id="@+id/button_clear"
            android:layout_width="0dp"
            android:textSize="@dimen/_16ssp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:background="@drawable/btn2_background_ripple"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:text="@string/clear_key"/>
        <Button
            android:id="@+id/button_0"
            android:layout_width="0dp"
            android:textSize="@dimen/_16ssp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:background="@drawable/btn_background_ripple"
            android:layout_weight="1"
            android:text="0"/>

        <ImageView
            android:id="@+id/button_left"
            android:layout_width="0dp"
            android:textSize="@dimen/_16ssp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_gravity="center"
            android:background="@drawable/btn2_background_ripple"
            android:src="@drawable/keyboard_left_svg"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/button_right"
            android:layout_width="0dp"
            android:textSize="@dimen/_16ssp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_gravity="center"
            android:background="@drawable/btn2_background_ripple"
            android:src="@drawable/keyboard_right_svg"
            android:layout_weight="1"/>

    </LinearLayout>
</LinearLayout>